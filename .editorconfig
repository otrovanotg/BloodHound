root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[{*.js,*.ts,*.jsx,*.tsx,*.json,*.html}]
indent_style = space
indent_size = 4

[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

[*.cue]
indent_style = tab
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false

eclint_indent_style = unset

[*.java]
indent_size = 4

[*.py]
indent_size = 4

[*.cypher]
indent_size = 4

[Dockerfile]
indent_size = 4
